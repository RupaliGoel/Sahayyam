<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/parent_linear_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimaryLight"
android:orientation="vertical"
tools:context=".AddRole">

    <android.support.v7.widget.Toolbar
        android:id="@+id/page_name"
        android:minHeight="?android:attr/actionBarSize"
        android:background="@color/tab2"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_light"
            android:text="Add Roles"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spinner_row_1"
        android:layout_width="match_parent"
        android:layout_below="@+id/page_name"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:orientation="horizontal" >
        <Spinner
            android:id="@+id/type_spinner1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_toLeftOf="@+id/disable_button1" />
        <Button
            android:id="@+id/disable_button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/enable_button1"
            android:background="@android:drawable/ic_delete" />
        <Button
            android:id="@+id/enable_button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_input_add" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spinner_row_2"
        android:layout_width="match_parent"
        android:layout_below="@+id/spinner_row_1"
        android:layout_height="50dp"
        android:orientation="horizontal" >
        <Spinner
            android:id="@+id/type_spinner2"
            android:layout_width="fill_parent"
            android:clickable="false"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/disable_button2" />
        <Button
            android:id="@+id/disable_button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/enable_button2"
            android:background="@android:drawable/ic_delete" />
        <Button
            android:id="@+id/enable_button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_input_add" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/spinner_row_3"
        android:layout_width="match_parent"
        android:layout_below="@+id/spinner_row_2"
        android:layout_height="50dp"
        android:orientation="horizontal" >
        <Spinner
            android:id="@+id/type_spinner3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_toLeftOf="@+id/disable_button3" />
        <Button
            android:id="@+id/disable_button3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/enable_button3"
            android:background="@android:drawable/ic_delete" />
        <Button
            android:id="@+id/enable_button3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@android:drawable/ic_input_add" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitRoles"
        android:background="@color/colorPrimary"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_below="@id/spinner_row_3"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>