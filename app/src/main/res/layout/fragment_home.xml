<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/page_name"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8"
        android:foregroundGravity="center"
        android:layout_gravity="center"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/searchDirectory"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/search"
            android:layout_row="0"
            android:layout_column="0"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/searchDirectorylabel"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:text="Search Directory"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/inputDirectory"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/writedir"
            android:layout_row="0"
            android:layout_column="1"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/inputDirectorylabel"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:text="Input Directory"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/searchAppeal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/searchappeal"
            android:layout_row="2"
            android:layout_column="0"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/searchAppeallabel"
            android:layout_width="150dp"
            android:layout_column="0"
            android:layout_row="3"
            android:gravity="center"
            android:text="Search Appeal"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/raiseOnAppeal"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/raiseappeal"
            android:layout_row="2"
            android:layout_column="1"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"/>

        <TextView
            android:id="@+id/raiseOnAppeallabel"
            android:layout_width="150dp"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:text="Raise On Appeal"
            android:textAlignment="center"
            android:textSize="20sp" />

    </GridLayout>

</FrameLayout>