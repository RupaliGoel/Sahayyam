<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rupali.sos.SearchEmergency">

    <android.support.v7.widget.Toolbar
        android:id="@+id/page_name"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Emergency"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/currentLocation"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/page_name"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/changeButton"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Current Location"
        android:focusable="false"
        android:inputType="textPostalAddress"
        android:textSize="15sp"
        android:drawableLeft="@drawable/location_drop_symbol_small"
        android:padding="5dip"
        android:background="@drawable/edit_text_style" />

    <ListView
        android:id="@+id/EmergencyListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentLocation" />

    <Button
        android:id="@+id/changeButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/currentLocation"
        android:layout_toStartOf="@+id/audioModeButton"
        android:background="@color/colorPrimary"
        android:text="Search"
        android:textColor="@color/white"
        android:textAllCaps="false" />

    <ImageButton
        android:id="@+id/audioModeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/currentLocation"
        android:src="@drawable/red_microphone_small" />

</RelativeLayout>